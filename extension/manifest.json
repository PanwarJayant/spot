{
  "manifest_version": 3,
  "name": "Text Retriever",
  "version": "1.0",
  "permissions": [
      "tabs",
      "activeTab",
      "storage",
      "http://*/*",
      "https://*/*"
  ],
  "background": {
      "scripts": ["background.js"],
      "persistent": true
  },
  "content_scripts": [
  {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
  }],
  "browser_action": {
      "default_popup": "popup.html"
  }
}
